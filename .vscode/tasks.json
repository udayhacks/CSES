{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile & Run (IO like Sublime)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/C",
        "g++ -std=c++20 -O2 -Wall \"${file}\" -o \"${fileDirname}\\a.exe\" && \"${fileDirname}\\a.exe\" < \"${fileDirname}\\input.txt\" > \"${fileDirname}\\output.txt\""
      ],
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/C"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile and run C++ with input/output redirection"
    }
  ]
}